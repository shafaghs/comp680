<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ButtonStyleFillIn" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:layout_marginLeft">12dp</item>
        <item name="android:layout_marginRight">12dp</item>
        <item name="android:background">@drawable/button_style_fillin</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="ButtonStyleEmptyIn" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:layout_marginLeft">12dp</item>
        <item name="android:layout_marginRight">12dp</item>
        <item name="android:background">@drawable/button_style_emptyin</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="EditTextSearch" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:layout_marginLeft">12dp</item>
        <item name="android:layout_marginRight">12dp</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:background">@drawable/serach_edit_text</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="containerStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:layout_marginLeft">12dp</item>
        <item name="android:layout_marginRight">12dp</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:padding">12dp</item>
        <item name="android:background">@drawable/light_grey_border</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="rowStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:layout_marginLeft">12dp</item>
        <item name="android:layout_marginRight">12dp</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:padding">12dp</item>
        <item name="android:background">@drawable/row_grey_border</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>


    <!-- Styles for the top bar of the home page with a picture -->
    <style name="HomePageMenyBar">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textAllCaps">false</item>
        <!-- <item
             name="android:textAllCaps">false</item> -->
    </style>

    <style name="titleText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="homePageMenu">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_gravity">center|center_horizontal</item>
    </style>

    <!-- Styles for the pop up categories manu on home page -->


    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>

<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/DrawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="15dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="15dp">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="15dp">

                <!-- Personal Statement-->
                <TableRow
                    android:layout_weight="1"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/field_perstmt"
                        android:layout_width="110dp"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:text="Major"
                        android:textColor="@color/black"
                        android:textSize="14dp" />


                    <EditText
                        android:id="@+id/edit_major_field"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:textColor="@color/black"
                        android:textSize="14dp"
                        android:textStyle="normal|bold" />

                </TableRow>

                <TableRow
                    android:layout_weight="1"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/field_exp"
                        android:layout_width="110dp"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:text="GPA"
                        android:textColor="@color/black"
                        android:textSize="14dp" />


                    <EditText
                        android:id="@+id/edit_gpa_field"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:textColor="@color/black"
                        android:textSize="14dp"
                        android:textStyle="normal|bold" />

                </TableRow>
                <!--Skills -->
                <TableRow
                    android:layout_weight="1"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/field_skills"
                        android:layout_width="110dp"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:text="Graduating in "
                        android:textColor="@color/black"
                        android:textSize="14dp" />


                    <EditText
                        android:id="@+id/edit_grad_year_field"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:textColor="@color/black"
                        android:textSize="14dp"
                        android:textStyle="normal|bold" />
                </TableRow>

                <TableRow
                    android:layout_weight="1"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/field_projects"
                        android:layout_width="110dp"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:text="Previous Degree"
                        android:textColor="@color/black"
                        android:textSize="14dp" />


                    <EditText
                        android:id="@+id/edit_prev_degree_field"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:textStyle="normal|bold" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/field_application_type"
                        android:layout_width="110dp"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:text="Application Type"
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <TextView
                            android:id="@+id/edit_application_type_field"
                            android:layout_width="180dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:paddingLeft="10dp"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            android:textStyle="normal|bold" />

                        <Spinner
                            android:id="@+id/application_type_spinner"
                            android:layout_width="30dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right">

                        </Spinner>
                    </LinearLayout>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/field_degree_level"
                        android:layout_width="110dp"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:text="Degree Level"
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <TextView
                            android:id="@+id/edit_degree_level_field"
                            android:layout_width="180dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:paddingLeft="10dp"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            android:textStyle="normal|bold" />

                        <Spinner
                            android:id="@+id/degree_level_spinner"
                            android:layout_width="30dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right">

                        </Spinner>

                    </LinearLayout>
                </TableRow>


            </TableLayout>

            <Button
                android:id="@+id/save_academic"
                style="@style/ButtonStyleFillIn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal|center_vertical"
                android:text="Save"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="14sp" />


        </LinearLayout>
    </ScrollView>
</android.support.v4.widget.DrawerLayout>
<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/DrawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="15dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="15dp">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="15dp">

                <!-- First Name -->
                <TableRow android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/field_fname"
                        android:layout_width="110dp"
                        android:layout_height="wrap_content"
                        android:paddingEnd="1dp"
                        android:paddingStart="10dp"
                        android:text="@string/first_name"
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/edit_firstname_field"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:paddingEnd="1dp"
                        android:paddingStart="10dp"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:textStyle="normal|bold" />

                </TableRow>
                <!-- Middle Name -->
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/field_mname"
                        android:layout_width="110dp"
                        android:layout_height="wrap_content"
                        android:paddingEnd="1dp"
                        android:paddingStart="10dp"
                        android:text="@string/middle_name"
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/edit_middlename_field"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:paddingEnd="1dp"
                        android:paddingStart="10dp"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:textStyle="normal|bold" />
                </TableRow>
                <!--Last Name -->
                <TableRow android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/field_lname"
                        android:layout_width="110dp"
                        android:layout_height="wrap_content"
                        android:paddingEnd="1dp"
                        android:paddingStart="10dp"
                        android:text="@string/last_name"
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/edit_lastname_field"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:paddingEnd="1dp"
                        android:paddingStart="10dp"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:textStyle="normal|bold" />
                </TableRow>

                <!-- Phone -->
                <TableRow android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/field_phone"
                        android:layout_width="110dp"
                        android:layout_height="wrap_content"
                        android:paddingEnd="1dp"
                        android:paddingStart="10dp"
                        android:text="@string/phone_number"
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/edit_phone_field"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:paddingEnd="1dp"
                        android:paddingStart="10dp"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:textStyle="normal|bold" />
                </TableRow>

                <!--Address -->
                <TableRow android:gravity="top">

                    <TextView
                        android:id="@+id/field_address"
                        android:layout_width="110dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:paddingEnd="1dp"
                        android:paddingStart="10dp"
                        android:text="@string/address"
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <EditText
                            android:id="@+id/edit_address_field"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:paddingEnd="1dp"
                            android:paddingStart="10dp"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            android:textStyle="normal|bold" />

                        <EditText
                            android:id="@+id/edit_address1_field"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:paddingEnd="1dp"
                            android:paddingStart="10dp"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            android:textStyle="normal|bold" />

                        <EditText
                            android:id="@+id/edit_city_field"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:paddingEnd="1dp"
                            android:paddingStart="10dp"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            android:textStyle="normal|bold" />
                    </LinearLayout>
                </TableRow>

                <!-- Status -->
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/field_status"
                        android:layout_width="110dp"
                        android:layout_height="40dp"
                        android:paddingEnd="1dp"
                        android:paddingStart="10dp"
                        android:text="@string/status"
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/status_text_view"
                            android:layout_width="180dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical"
                            android:paddingLeft="10dp"
                            android:textColor="@color/black"
                            android:textSize="14dp"
                            android:textStyle="normal|bold" />

                        <Spinner
                            android:id="@+id/status_spinner"
                            android:layout_width="30dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"></Spinner>

                    </LinearLayout>
                </TableRow>


                <!--Work Authorization -->
                <TableRow android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/work_authorization"
                        android:layout_width="110dp"
                        android:layout_height="40dp"
                        android:paddingEnd="1dp"
                        android:paddingStart="10dp"
                        android:text="@string/work_authorizarion"
                        android:textColor="@color/black"
                        android:textSize="14sp" />
                    <!-- addd choices here -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/work_auth_text_view"
                            android:layout_width="180dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical"
                            android:paddingEnd="1dp"
                            android:paddingStart="10dp"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            android:textStyle="normal|bold" />

                        <Spinner
                            android:id="@+id/workauth_spinner"
                            android:layout_width="30dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"></Spinner>
                    </LinearLayout>
                </TableRow>
            </TableLayout>

            <Button
                android:id="@+id/save_personal"
                style="@style/ButtonStyleFillIn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal|center_vertical"
                android:text="Save"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="14sp" />

        </LinearLayout>
    </ScrollView>
</android.support.v4.widget.DrawerLayout>
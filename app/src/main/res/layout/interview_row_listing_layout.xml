<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:weightSum="3">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight=".1"
        android:gravity="center_vertical|center_horizontal">

        <TextView
            android:id="@+id/interview_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2.9"
        android:gravity="start"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/company_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/list_selector_style"
                android:gravity="start"
                android:text="Company Name: "
                android:textAppearance="@style/TextAppearance.AppCompat.Light.SearchResult.Title"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/interview_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/list_selector_style"
                android:gravity="start"
                android:textAppearance="@style/TextAppearance.AppCompat.Light.SearchResult.Title"
                android:textColor="#000000" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/interview_information"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/list_selector_style"
                android:gravity="start"
                android:text="Interview information:"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/interview_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/list_selector_style"
                android:gravity="start"
                android:textColor="#000000" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/interview_date_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/list_selector_style"
                android:gravity="start"
                android:text="Interview date:"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/interview_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/list_selector_style"
                android:gravity="start"
                android:layout_marginEnd="10dp"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/interview_date_time1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/list_selector_style"
                android:gravity="start"
                android:text="Time:"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/interview_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/list_selector_style"
                android:gravity="start"
                android:textColor="#000000" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/interview_location1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/list_selector_style"
                android:gravity="start"
                android:text="Interview location:"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/interview_location"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:background="@drawable/list_selector_style"
                android:gravity="start"
                android:textColor="#000000"
                android:textSize="@dimen/small_text_size" />
        </LinearLayout>


    </LinearLayout>
</LinearLayout>
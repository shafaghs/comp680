<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <View
                android:layout_width="0dp"
                android:layout_height="5dp"
                android:layout_weight="1"
                android:background="@color/white" />

            <View
                android:layout_width="0dp"
                android:layout_height="5dp"
                android:layout_weight="1"
                android:background="@color/colorAccent" />

        </LinearLayout>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:weightSum="4">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="2dp"
                android:text="@string/fill_below"
                android:textSize="@dimen/text_size" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:text="Your email address:"
                android:textSize="@dimen/text_size" />

            <TextView
                android:id="@+id/sign_up_con_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:hint="@string/login_email"
                android:textSize="@dimen/text_size" />

            <TextView
                android:id="@+id/sign_up_con_error"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:visibility="gone"
                android:textColor="@color/red"
                android:textSize="@dimen/text_size" />

            <TextView
                android:id="@+id/sign_up_con_first_name_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="* First Name"
                android:textSize="@dimen/text_size" />

            <EditText
                android:id="@+id/sign_up_con_first_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:hint="First Name"
                android:textSize="@dimen/normal_text_size" />

            <TextView
                android:id="@+id/sign_up_con_middle_name_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="Middle Name"
                android:textSize="@dimen/text_size" />

            <EditText
                android:id="@+id/sign_up_con_middle_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:hint="Middle Name"
                android:inputType="textPassword"
                android:textSize="@dimen/normal_text_size" />

            <TextView
                android:id="@+id/sign_up_con_family_name_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="@string/family_name"
                android:textSize="@dimen/text_size" />

            <EditText
                android:id="@+id/sign_up_con_family_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:hint="Family Name"
                android:textSize="@dimen/normal_text_size" />

            <Button
                android:id="@+id/sign_up_con_submit"
                style="@style/ButtonStyleFillIn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/signUp"
                android:textAllCaps="false" />

        </LinearLayout>
    </LinearLayout>
</ScrollView>
